@model IEnumerable<Orphelinat.Web.Models.BesoinModel>

@{
    ViewBag.Title = "Liste à supprimer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Supprimer</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Libele)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Libele)
        </td>
        <td>
            @Html.ActionLink("Supprimer", "Supprimer", new { Id = item.IdBesoin })
        </td>
    </tr>
}

</table>
