@model Orphelinat.Web.Models.ConnexionModel

<!DOCTYPE html>
<html lang="en">
<!-- Basic -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Site Metas -->
    <title>Orphelinat</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")" type="image/x-icon">
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/images/apple-touch-icon.png")">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")">
    <!-- Site CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/style1.css")">
    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/all.min.css")">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/responsive1.css")">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Content/custom.css")">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <div id="particles-js" class="main-form-box">
        <div class="md-form">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <div class="panel panel-login w-100">
                            <div class="logo-top">
                                <a href="#"><img src="@Url.Content("~/Content/images/logo1.png")" alt="" /></a>
                            </div>
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-lg-6 col-sm-6 col-xl-6">
                                        <a href="#" id="login-form-link" style="margin-left: auto; margin-right: auto;">Se Connecter</a>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form id="login-form" action="@Url.Action("Connexion")" method="post" role="form" style="display: block;">
                                            <div class="form-group">
                                                <label class="icon-lp"><i class="fas fa-user-tie"></i></label>
                                                <input type="email" name="@Html.NameFor(x => x.Email)" id="username" class="form-control" placeholder="Nom Utilisateur" value="" required="">
                                            </div>
                                            <div class="form-group">
                                                <label class="icon-lp"><i class="fas fa-key"></i></label>
                                                <input type="password" name="@Html.NameFor(x => x.MotDePasse)" id="password" class="form-control" placeholder="Mot de passe" required="">
                                            </div>
                                            <div class="che-box">
                                                <label class="checkbox-in">
                                                    <input name="checkbox" type="checkbox" tabindex="3" id="remember"> <span></span>
                                                    Rappeler moi
                                                </label>
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-sm-6 mx-auto">
                                                        <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Connexion">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row justify-content-center">
                                                <a href="#" tabindex="5" class="forgot-password">Mot de passe oublie?</a>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/particles.min.js")"></script>
    <script src="@Url.Content("~/Scripts/index.js")"></script>
    <script type="text/javascript">
        $("#login-form").delay(100).fadeIn(100);
        $("#register-form").fadeOut(100);
        $('#register-form-link').removeClass('active');
        $(this).addClass('active');
        e.preventDefault();
    </script>
</body>
</html>
